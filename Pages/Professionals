import React, { useState } from 'react';
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Search, Plus, Building2, MapPin, ArrowLeft, Lightbulb } from "lucide-react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Badge } from "@/components/ui/badge";
import { useQuery } from "@tanstack/react-query";
import { base44 } from "@/api/base44Client";

export default function Professionals() {
  const [searchQuery, setSearchQuery] = useState('');

  // Sample professionals data
  const professionals = [
    {
      id: 1,
      name: "Emma Chen",
      title: "Sustainable Fabric Sourcing Manager",
      company: "Melbourne Fashion House",
      location: "Melbourne, Australia",
      skills: ["Sustainable Materials", "Organic Cotton", "Fabric Sourcing"]
    },
    {
      id: 2,
      name: "James Rodriguez",
      title: "Manufacturing Consultant",
      company: "Sydney Textile Solutions",
      location: "Sydney, Australia",
      skills: ["Manufacturing", "Quality Control", "Production Planning"]
    },
    {
      id: 3,
      name: "Sophie Anderson",
      title: "Fashion Designer",
      company: "Anderson Design Studio",
      location: "Brisbane, Australia",
      skills: ["Fashion Design", "Pattern Making", "Technical Design"]
    }
  ];

  // Fetch requests for matching
  const { data: requests = [] } = useQuery({
    queryKey: ['requests'],
    queryFn: () => base44.entities.Request.list()
  });

  // Advanced function to find matching requests for a professional
  const getMatchingRequests = (professional) => {
    const matchedRequests = requests.map(request => {
      let score = 0;
      
      // Skill matching (high priority)
      professional.skills.forEach(skill => {
        const skillLower = skill.toLowerCase();
        if (request.title.toLowerCase().includes(skillLower)) score += 10;
        if (request.description.toLowerCase().includes(skillLower)) score += 5;
      });
      
      // Category matching
      const categoryKeywords = {
        "Manufacturing": ["manufacturing", "production", "factory"],
        "Materials & Resources": ["material", "fabric", "resource", "sourcing"],
        "Technical Help": ["technical", "help", "support", "advice"],
        "Suppliers Needed": ["supplier", "vendor", "source"],
        "Collaboration": ["collaborate", "partner", "work together"]
      };
      
      if (categoryKeywords[request.category]) {
        categoryKeywords[request.category].forEach(keyword => {
          professional.skills.forEach(skill => {
            if (skill.toLowerCase().includes(keyword)) score += 3;
          });
        });
      }
      
      // Location matching (bonus points)
      if (request.location && professional.location) {
        const profLocation = professional.location.toLowerCase();
        const reqLocation = request.location.toLowerCase();
        if (profLocation.includes(reqLocation) || reqLocation.includes(profLocation)) {
          score += 7;
        }
      }
      
      // Only open requests (higher priority)
      if (request.status === "Open") score += 2;
      
      return { request, score };
    })
    .filter(item => item.score > 0)
    .sort((a, b) => b.score - a.score)
    .slice(0, 3) // Show top 3 matching requests
    .map(item => item.request);
    
    return matchedRequests;
  };

  const filteredProfessionals = professionals.filter(p =>
    p.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
    p.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
    p.company.toLowerCase().includes(searchQuery.toLowerCase()) ||
    p.location.toLowerCase().includes(searchQuery.toLowerCase()) ||
    p.skills.some(skill => skill.toLowerCase().includes(searchQuery.toLowerCase()))
  );

  return (
    <div className="min-h-screen bg-white">
      {/* Banner Header */}
      <div className="w-full bg-[#e8e4d8] text-[#3D3935] py-20">
        <div className="max-w-3xl mx-auto px-6 text-center">
          <Link to={createPageUrl('Home')} className="inline-flex items-center gap-2 text-xs text-gray-600 hover:text-gray-800 mb-8 transition-colors tracking-widest uppercase">
            <ArrowLeft className="w-3 h-3" />
            Back to Home
          </Link>
          <h1 className="playfair text-4xl md:text-5xl font-bold mb-4 leading-tight">Fashion Professionals</h1>
          <p className="text-sm text-gray-600 max-w-xl mx-auto">
            Connect with experts, find collaborators, and grow your network
          </p>
        </div>
      </div>

      {/* Search and Filter Section */}
      <div className="w-full bg-white border-b border-gray-200 py-6 sticky top-0 z-10">
        <div className="max-w-7xl mx-auto px-6">
          <div className="flex flex-col sm:flex-row items-stretch sm:items-center justify-between gap-4">
            <div className="relative flex-1 max-w-sm">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-4 h-4" />
              <Input
                placeholder="Search by name, company, expertise..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                className="pl-10 h-10 bg-gray-50 border-gray-300 rounded-lg text-sm w-full"
              />
            </div>
            <Link to={createPageUrl('Home')}>
              <Button className="bg-blue-600 hover:bg-blue-700 text-white flex items-center gap-2 w-full sm:w-auto">
                <Plus className="w-4 h-4" />
                Add Profile
              </Button>
            </Link>
          </div>
          <p className="text-gray-600 text-sm mt-4">{filteredProfessionals.length} professionals</p>
        </div>
      </div>

      {/* Content */}
      <div className="max-w-7xl mx-auto px-6 py-12">
        {/* Professionals Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {filteredProfessionals.map((professional) => {
            const matchingRequests = getMatchingRequests(professional);
            return (
              <div key={professional.id} className="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow bg-white">
                <div className="p-6">
                  <div className="flex items-center gap-4 mb-4">
                    <div className="w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                      <svg className="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <div className="flex-1">
                      <h3 className="text-lg font-semibold text-[#3D3935]">{professional.name}</h3>
                      <p className="text-sm text-gray-600 font-medium">{professional.title}</p>
                    </div>
                  </div>

                  <div className="space-y-2 mb-4">
                    <div className="flex items-center gap-2 text-sm text-gray-600">
                      <Building2 className="w-4 h-4 text-gray-400" />
                      <span>{professional.company}</span>
                    </div>
                    <div className="flex items-center gap-2 text-sm text-gray-600">
                      <MapPin className="w-4 h-4 text-gray-400" />
                      <span>{professional.location}</span>
                    </div>
                  </div>

                  <div className="mb-4">
                    <div className="flex flex-wrap gap-2">
                      {professional.skills.map((skill) => (
                        <Badge key={skill} variant="secondary" className="bg-gray-100 text-gray-700 text-xs font-normal">
                          {skill}
                        </Badge>
                      ))}
                    </div>
                  </div>
                </div>

                {/* Matching Requests Section */}
                {matchingRequests.length > 0 && (
                  <div className="border-t border-gray-100 bg-gradient-to-br from-amber-50 to-orange-50 p-4">
                    <div className="flex items-center gap-2 mb-3">
                      <Lightbulb className="w-4 h-4 text-amber-600" />
                      <p className="text-xs font-semibold text-gray-800">
                        {matchingRequests.length} highly relevant match{matchingRequests.length !== 1 ? 'es' : ''}
                      </p>
                    </div>
                    <div className="space-y-2">
                      {matchingRequests.map((request) => (
                        <Link
                          key={request.id}
                          to={createPageUrl('Home')}
                          className="block p-3 rounded-lg bg-white hover:bg-amber-50 transition-all border border-amber-200 hover:border-amber-300 hover:shadow-sm"
                        >
                          <div className="flex items-start justify-between gap-2 mb-1">
                            <p className="text-xs font-medium text-[#3D3935] line-clamp-2 flex-1">{request.title}</p>
                            {request.status === "Open" && (
                              <span className="text-[10px] bg-green-100 text-green-700 px-1.5 py-0.5 rounded-full flex-shrink-0">
                                Open
                              </span>
                            )}
                          </div>
                          <div className="flex items-center gap-2 text-[10px] text-gray-500">
                            {request.location && (
                              <span className="flex items-center gap-1">
                                <MapPin className="w-3 h-3" />
                                {request.location}
                              </span>
                            )}
                            <span className="px-1.5 py-0.5 bg-gray-100 rounded text-gray-600">
                              {request.category}
                            </span>
                          </div>
                        </Link>
                      ))}
                    </div>
                  </div>
                )}

                <div className="p-6">
                  <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white text-sm">
                    Connect
                  </Button>
                </div>
              </div>
            );
          })}
        </div>

        {filteredProfessionals.length === 0 && (
          <div className="text-center py-16">
            <p className="text-gray-500 text-lg">No professionals found matching your search.</p>
          </div>
        )}
      </div>
    </div>
  );
}